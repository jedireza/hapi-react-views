  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jedireza/hapi-react-views/issues"
  },
  "homepage": "https://github.com/jedireza/hapi-react-views",
  "dependencies": {
    "hoek": "^2.x.x"
  },
  "peerDependencies": {
    "react": "^0.14.x ",
    "react-dom": "^0.14.x "
  },
  "devDependencies": {
    "babel": "~6.0.15",
    "babel-core": "~6.0.15",
    "babel-loader": "~6.0.1",
    "babel-preset-es2015": "~6.0.15",
    "babel-preset-react": "~6.0.15",
    "code": "^1.x.x",
